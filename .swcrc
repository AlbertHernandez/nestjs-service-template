{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@contexts/*": ["src/contexts/*"],
      "@shared/*": ["src/shared/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "es2022"
  },
  "minify": false
}
